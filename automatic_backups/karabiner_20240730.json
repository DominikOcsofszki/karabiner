{
  "global": {
    "show_in_menu_bar": false
  },
  "profiles": [
    {
      "name": "Default",
      "complex_modifications": {
        "rules": [
          {
            "description": "Hyper Key + k",
            "manipulators": [
              {
                "to": [
                  {
                    "shell_command": "open -a 'kitty.app'"
                  }
                ],
                "description": "Open -a 'kitty.app'",
                "type": "basic",
                "from": {
                  "key_code": "k",
                  "modifiers": {
                    "optional": [
                      "any"
                    ]
                  }
                },
                "conditions": [
                  {
                    "type": "variable_if",
                    "name": "hyper",
                    "value": 1
                  },
                  {
                    "type": "variable_if",
                    "name": "hyper_sublayer_k",
                    "value": 0
                  },
                  {
                    "type": "variable_if",
                    "name": "hyper_sublayer_j",
                    "value": 0
                  },
                  {
                    "type": "variable_if",
                    "name": "hyper_sublayer_m",
                    "value": 0
                  }
                ]
              }
            ]
          },
          {
            "description": "Hyper Key + j",
            "manipulators": [
              {
                "to": [
                  {
                    "shell_command": "open -a 'safari.app'"
                  }
                ],
                "description": "Open -a 'safari.app'",
                "type": "basic",
                "from": {
                  "key_code": "j",
                  "modifiers": {
                    "optional": [
                      "any"
                    ]
                  }
                },
                "conditions": [
                  {
                    "type": "variable_if",
                    "name": "hyper",
                    "value": 1
                  },
                  {
                    "type": "variable_if",
                    "name": "hyper_sublayer_k",
                    "value": 0
                  },
                  {
                    "type": "variable_if",
                    "name": "hyper_sublayer_j",
                    "value": 0
                  },
                  {
                    "type": "variable_if",
                    "name": "hyper_sublayer_m",
                    "value": 0
                  }
                ]
              }
            ]
          },
          {
            "description": "Hyper Key + m",
            "manipulators": [
              {
                "to": [
                  {
                    "shell_command": "open -a 'brave browser.app'"
                  }
                ],
                "description": "Open -a 'brave browser.app'",
                "type": "basic",
                "from": {
                  "key_code": "m",
                  "modifiers": {
                    "optional": [
                      "any"
                    ]
                  }
                },
                "conditions": [
                  {
                    "type": "variable_if",
                    "name": "hyper",
                    "value": 1
                  },
                  {
                    "type": "variable_if",
                    "name": "hyper_sublayer_k",
                    "value": 0
                  },
                  {
                    "type": "variable_if",
                    "name": "hyper_sublayer_j",
                    "value": 0
                  },
                  {
                    "type": "variable_if",
                    "name": "hyper_sublayer_m",
                    "value": 0
                  }
                ]
              }
            ]
          },
          {
            "description": "Hyper Key (⌃⌥⇧⌘)",
            "manipulators": [
              {
                "description": " -> Hyper Key",
                "from": {
                  "simultaneous": [
                    {
                      "key_code": "left_shift"
                    },
                    {
                      "key_code": "right_shift"
                    }
                  ]
                },
                "to": [
                  {
                    "set_variable": {
                      "name": "hyper",
                      "value": 1
                    }
                  }
                ],
                "to_after_key_up": [
                  {
                    "set_variable": {
                      "name": "hyper",
                      "value": 0
                    }
                  }
                ],
                "type": "basic"
              }
            ]
          },
          {
            "description": "Hyper Key (⌃⌥⇧⌘)",
            "manipulators": [
              {
                "description": "Tab-long -> Hyper Key",
                "from": {
                  "key_code": "tab"
                },
                "to_if_alone": [
                  {
                    "key_code": "tab"
                  }
                ],
                "to": [
                  {
                    "set_variable": {
                      "name": "hyper",
                      "value": 1
                    }
                  }
                ],
                "to_after_key_up": [
                  {
                    "set_variable": {
                      "name": "hyper",
                      "value": 0
                    }
                  }
                ],
                "type": "basic"
              }
            ]
          },
          {
            "description": "caps_lock -> ESC, left ctrl",
            "manipulators": [
              {
                "description": "caps_lock -> ESC, left ctrl",
                "from": {
                  "key_code": "caps_lock",
                  "modifiers": {
                    "optional": [
                      "any"
                    ]
                  }
                },
                "to": [
                  {
                    "key_code": "left_control"
                  }
                ],
                "to_if_alone": [
                  {
                    "key_code": "escape"
                  }
                ],
                "type": "basic"
              }
            ]
          }
        ]
      }
    }
  ]
}